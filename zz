<script type="text/javascript">   
function password() {   
var testV = 1;   
var pass1 = prompt('你猜','');   
while (testV < 1000) {   
if (!pass1)   
history.go(-1);   
if (pass1 == "桑") {//初始密码123   
alert('猜对了!!！');   
break;   
}   
testV+=1;   
var pass1 =   
prompt('再猜:');   
}   
if (pass1!="password" & testV ==1000)   
history.go(-1);   
return " ";   
}   
document.write(password());   
</script>  
